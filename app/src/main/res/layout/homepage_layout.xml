<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/emergency_contact_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_item"
            android:paddingLeft="@dimen/padding_item"
            android:src="@drawable/contact_homepage_icon" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
         <TextView
            android:id="@+id/emergency_contact_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:paddingLeft="@dimen/padding_item"
            android:text="@string/contact_textview"
            android:textStyle="bold"
            android:textSize="@dimen/contact_textview_dimen"
            android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/my_information_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_item"
        android:paddingLeft="@dimen/padding_item"
        android:src="@drawable/information_homepage_icon" />


       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_information_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_item"
            android:text="@string/my_indormation_textview"

            android:textStyle="bold"
            android:textSize="@dimen/contact_textview_dimen"
            android:layout_gravity="center"/>
       </LinearLayout>

    </LinearLayout>
</LinearLayout>


